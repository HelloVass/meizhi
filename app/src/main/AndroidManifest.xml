        </activity>

        <activity android:name=".preview.PreviewActivity">

        </activity>

        <activity android:name=".dailyDetail.DailyDetailActivity">

        </activity>

        <activity android:name=".settings.SettingsActivity">

        </activity>

    </application>

</manifest>
